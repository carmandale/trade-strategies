# Backend Environment Configuration Example
# Copy this file to .env and update with your values

# API server port
API_PORT=8000
PORT=8000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Database configuration
# Individual database connection parameters (preferred for flexibility)
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trade_strategies

# Full connection string (optional, overrides individual parameters if set)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Database debugging (set to true to see SQL queries)
DATABASE_ECHO=false

# Project identification
PROJECT_NAME=trade-strategies